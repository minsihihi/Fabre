{
  "name": "capstone_project",
  "version": "1.0.4",
  "main": "frontend/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "concurrently \"npm run frontend\" \"npm run electron\"",
    "frontend": "vite --config frontend/vite.config.js",
    "electron": "wait-on http://localhost:5173 && electron .",
    "backend": "node backend/app.js",
    "dev": "vite --host",
    "build": "vite build --config frontend/vite.config.js",
    "dist": "electron-builder",
    "deploy": "npm run build && npm run dist -- --publish always",
    "deploy:win": "npm run deploy:win32 && npm run deploy:win64",
    "deploy:win32": "electron-builder --win nsis:ia32",
    "deploy:win64": "electron-builder --win nsis:x64",
    "postbuild": "node -e \"if (process.platform === 'darwin') { require('child_process').execSync('xattr -cr dist/mac-arm64/채찍피티.app'); }\""
  },
  "build": {
    "appId": "com.chaejjikpt",
    "productName": "Start chaejjikpt",
    "asar": true,
    "files": [
      "frontend/main.js",
      "frontend/preload.js",
      "frontend/dist/**",
      "backend/**",
      "node_modules/**",
      "package.json"
    ],
    "dmg": {
            "title": "Start Electron"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true
        },
        "directories": {
            "buildResources": "./resources/installer/",
            "output": "./dist/",
            "app": "."
        },
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": null,
      "icon": "assets/icon.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "minsihihi",
      "repo": "Fabre"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "mysql2": "^3.12.0",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "node-schedule": "^2.1.1",
    "openai": "^4.88.0",
    "react": "^19.1.0",
    "react-calendar": "^5.1.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.1",
    "sequelize": "^6.37.5",
    "sharp": "^0.33.5",
    "three": "^0.176.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/jwt-decode": "^2.2.1",
    "@types/react": "^19.1.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "semver": "^7.7.2",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.7.3"
  }
}
